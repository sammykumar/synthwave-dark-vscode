{
    "name": "synthwave-dark-vscode",
    "displayName": "SynthWave Dark '84",
    "description": "A Dark Synthwave-inspired colour theme to satisfy your neon dreams",
    "version": "0.1.15",
    "author": "Sammy Kumar",
    "publisher": "SammyKumar",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/sammykumar/synthwave-dark-vscode"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "keywords": [
        "retro",
        "80s"
    ],
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:synthwavedark84.enableNeon",
        "onCommand:synthwavedark84.disableNeon"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "SynthWave Dark '84",
                "uiTheme": "vs-dark",
                "path": "./themes/synthwave-color-theme.json"
            }
        ],
        "commands": [
            {
                "command": "synthwave.dark84.enableNeon",
                "title": "Synthwave Dark '84: Enable Neon Dreams"
            },
            {
                "command": "synthwave.dark84.disableNeon",
                "title": "Synthwave Dark '84: Disable Neon Dreams"
            }
        ],
        "configuration": {
            "title": "Synthwave Dark '84",
            "properties": {
                "synthwave.dark84.brightness": {
                    "type": "number",
                    "default": 1,
                    "description": "Set the brightness value for the glow effect. 0.0 is fully transparent and 1.0 is fully bright"
                },
                "synthwave.dark84.disableGlow": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the glow effect, but show Synthwave Dark '84 editor chrome updates"
                }
            }
        }
    },
    "dependencies": {
        "semver": "^7.1.1"
    }
}
